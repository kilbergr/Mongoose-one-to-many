<% include ../partials/header %>
  <h1>All the zoos!</h1>
  <div>
    <%= zoo.name%> <%= zoo.location%>'s animals:
    <% animals.forEach(function(animal){ %>
      <p>
        <a href="/zoos/<%= zoo._id%>/animals/<%= animal.id%>"><%= animal.name%></a> is a <%= animal.species%> who is <%= animal.age%> year(s) old. This is what this animal looks like: <%= animal.photo %>

      </p>
    <% })%>
  </div>
  <p>
      <a href="/zoos/<%= zoo._id%>/animals/new">Add a new animal to this zoo</a>
  </p>
  <div>
    <a href="/zoos/<%= zoo._id%>/edit">Edit this zoo</a>
    <form action="/zoos/<%= zoo._id%>?_method=DELETE" method="POST">
      <input type="submit" value="DELETE">
    </form>
  </div>
  <div>
    <a href="/zoos">View all zoos</a>
  </div>
<% include ../partials/footer %>